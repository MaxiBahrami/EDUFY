@using InsightAcademy.DomainLayer.Entities.Identity
@model ApplicationUser
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    .profile-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-image {
        text-align: center;
    }

        .profile-image img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

    .input-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
    }

        .input-row .input-column {
            width: 48%;
        }

        .input-row label {
            font-weight: bold;
        }

        .input-row input[type="text"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

    .submit-btn {
        text-align: center;
    }

        .submit-btn button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
</style>

<form method="post" asp-controller="Student" asp-action="Profile" enctype="multipart/form-data" style="margin-top:5px;margin-bottom:5px">
    <div class="profile-container">
        <div class="profile-image">
            <img src="/@(Model.ProfileImageUrl == null ? "images/man.png" : Model.ProfileImageUrl)" alt="Profile Picture" style="width: 50px; height: 50px;">
            <input type="file" accept="image/*" asp-for="UserImage">
        </div>
        <div class="input-row">
            <div class="input-column">
                <label for="first-name">First Name:</label>
                <input type="text"  asp-for="FirstName">
            </div>
            <div class="input-column">
                <label for="last-name">Last Name:</label>
                <input type="text"   asp-for="LastName">
            </div>
        </div>
        <div class="input-row">
            <div class="input-column">
                <label>Website:</label>
                <input type="text" asp-for="Website">
            </div>
            <div class="input-column">
                <label>Phone:</label>
                <input type="text" asp-for="PhoneNumber">
            </div>
        </div>
        <div class="input-row">
            <div class="input-column">
                <label>Address:</label>
                <input type="text"  asp-for="StreetAdress">
            </div>
          
        </div>
     
        <div class="input-row">
            <div class="input-column">
                <label>Country:</label>
                <div class="tu-select">
                    <select data-placeholder="Select Country from list" asp-for="Country" data-placeholderinput="Select Country from list" class="form-control js-example-basic-single" asp-items="ViewBag.Country" onchange="getCitiesByCountryId(this.value)">
                        <option value="" disabled>-- Select Country --</option>
                    </select>
                </div>
                @* <select asp-for="Country" data-placeholder="Select country" data-placeholderinput="Select country" class="form-select" asp-items="ViewBag.Country" onchange="getCitiesByCountryId(this.value)">
                    <option label="Select country from list"></option>

                </select> *@
            </div>
            <div class="input-column">
                <label>City:</label>
                <select asp-for="City" data-placeholder="Select country" data-placeholderinput="Select country" id="ddlcity" class="form-select js-example-basic-single" asp-items="ViewBag.Cities">
                    <option label="Select city from list"></option>
                </select>
            </div>
            
        </div>
        <div class="submit-btn">
            <button type="submit">Save</button>
        </div>
    </div>
</form>

