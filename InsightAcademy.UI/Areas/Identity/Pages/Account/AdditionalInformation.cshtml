@page "{email}/{loginProvider}/{providerKey}/{displayName}"
@model InsightAcademy.UI.Areas.Identity.Pages.Account.AdditionalInformationModel
@{
}
<h2>AdditionalInformation</h2>
<form method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="LoginProvider" />
    <input type="hidden" asp-for="ProviderKey" />
    <input type="hidden" asp-for="DisplayName" />
    <div class="form-group">
        <label>Role <span style="color:red">*</span></label>
        <select class="form-select" asp-for="Role">
            <option value="">Select Role</option>
            <option value="Student">Student</option>
            <option value="Teacher">Teacher</option>
        </select>
    </div>
    <div class="form-group">
        <label>Gender <span style="color:red">*</span></label>
        <select class="form-select" asp-for="Gender">
            <option value="">Select Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button class="tu-primbtn-lg" id="join-btn"  type="submit"><span>Join now</span><i class="icon icon-arrow-right"></i></button>
    </div>
</form>