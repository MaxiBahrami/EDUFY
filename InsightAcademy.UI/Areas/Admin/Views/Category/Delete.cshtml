@{
	Layout = "_AdminLayout";
}
@model Category
<partial name="_Notification" />
<form method="post">
	<div class="row">
		<div class="col-sm-12">
			<div class="card-box">
				<div class="card-head">
					<header>Delete Category</header>
				</div>
				<div class="card-body row">
					<div class="col-lg-12 p-t-20">
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
							<input asp-for="Name" class="mdl-textfield__input" disabled type="text">
							<label asp-for="Name" class="mdl-textfield__label" ></label>
							<span asp-validation-for="Name" class="text-danger"></span>

						</div>
					</div>
					<div class="col-lg-12 p-t-20 text-center">
						<button type="submit"
								class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-circle btn-primary">
							Delete
						</button>
						<a asp-area="Admin" asp-controller="Category" asp-action="CategoryList"
						   class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-circle btn-danger">
							Cancel
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>